// External libraries
#include <msp430.h>

#ifndef BUTTON_H
#define BUTTON_H

//Define variable containing button information
struct Button{
	char port;			// Port of button
	char pin;			// Pin of button
};

extern void setupStartStop(struct Button *butt);
extern void setupModeSwitch(struct Button *butt);

#endif // BUTTON_H
